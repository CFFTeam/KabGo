{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "./dist",
		"strict": true,
		"alwaysStrict": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@common/*": ["common/*"],
			"@packages/*": ["packages/*"]
		}
	},
	"include": ["**/*.ts", "**/*.d.ts"],
	"exclude": ["node_modules"],
	"files": ["./types/index.d.ts"]
}
